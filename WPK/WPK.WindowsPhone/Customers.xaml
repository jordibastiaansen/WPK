<Page
    x:Class="WPK.Customers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WPK"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="btnSearch" Content="Zoek" HorizontalAlignment="Left" Margin="281,0,0,0" VerticalAlignment="Top" Height="57" Width="70" Click="btnSearch_Click"/>
        <TextBox x:Name="txtSearchBar" HorizontalAlignment="Left" Margin="55,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="38" Width="221" PlaceholderText="Voer zoekterm in..."/>
        <ListBox x:Name="mylistbox" Margin="10,53,10,10" RequestedTheme="Dark" SelectionChanged="OpenCustomer">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Height="80" VerticalAlignment="Top" RequestedTheme="Dark">
                        <TextBlock x:Name="nameblock" Text="{Binding name}" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="57" Width="236" FontSize="36" Margin="10,10,0,0" RequestedTheme="Dark" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Page>
